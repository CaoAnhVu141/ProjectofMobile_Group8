<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorPrimary"
        android:title="Product Detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tiêu đề chính -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Chi tiết sản phẩm"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Dấu ba chấm -->
            <ImageView
                android:id="@+id/overflowMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Overflow Icon"
                android:src="@android:drawable/ic_menu_more" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView cho phần chi tiết sản phẩm -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh lớn -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <!-- 3 ảnh nhỏ bên dưới -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/smallImage1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/smallImage2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/smallImage3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </LinearLayout>

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="22sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />

            <!-- Mô tả sản phẩm -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />

            <!-- Chọn kích cỡ -->
            <TextView
                android:id="@+id/sizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size:"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/sizeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:gravity="center_vertical" />

            <!-- Số lượng và nút thêm vào giỏ hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Phần số lượng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Nút giảm số lượng -->
                    <Button
                        android:id="@+id/decreaseButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="0dp"
                        android:textSize="30dp"
                        android:text="-" />

                    <!-- Nhập số lượng -->
                    <EditText
                        android:id="@+id/quantityEditText"
                        android:layout_width="64dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="0"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <!-- Nút tăng số lượng -->
                    <Button
                        android:id="@+id/increaseButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="0dp"
                        android:textSize="20dp"
                        android:text="+" />
                </LinearLayout>

                <!-- Khoảng trống để nút Add to Cart nằm bên phải -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- Nút Add to Cart -->
                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Add to Cart"
                    android:backgroundTint="@color/purple_200"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
