<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thanh tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Icon Back -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <!-- Khoảng trống -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Icon Cart -->
            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Cart" />

            <!-- Icon Menu -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Banner -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_image"
            android:contentDescription="Banner" />

        <!-- Danh sách sản phẩm -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <!-- Sản phẩm 1 -->
            <LinearLayout
                android:id="@+id/llSanpham1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/product_item_background"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/shoe_image"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vans Old Skool"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.850.000 vnd"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Sản phẩm 2 -->
            <LinearLayout
                android:id="@+id/llSanpham2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/product_item_background"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/shoe_image"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air Force 1"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.500.000 vnd"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Sản phẩm 3 -->
            <LinearLayout
                android:id="@+id/llSanpham3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/product_item_background"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/shoe_image"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MLB Big Ball A"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.490.000 vnd"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Sản phẩm 4 -->
            <LinearLayout
                android:id="@+id/llSanpham4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/product_item_background"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/shoe_image"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adidas Hoops"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.890.000 vnd"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:gravity="center" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
