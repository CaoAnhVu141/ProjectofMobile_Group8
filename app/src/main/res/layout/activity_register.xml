<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title "Đăng Ký" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <!-- Email Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Vào Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Phone Number Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số Điện Thoại"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Vào Số Điện Thoại"
        android:inputType="phone"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Full Name Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ Và Tên"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Vào Họ Và Tên"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Password Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật Khẩu"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Vào Mật Khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Confirm Password Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Lại Mật Khẩu"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"/>

    <!-- Login and Forgot Password Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textColor="#FF6E40"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#FF6E40"/>
    </LinearLayout>

</LinearLayout>
